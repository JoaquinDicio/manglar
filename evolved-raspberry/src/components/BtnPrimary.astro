---
const { text } = Astro.props;
---

<button>{text}</button>

<style>
  button {
    background-color: var(--main-color);
    color: #ffff;
    font-size: 1.3rem;
    text-transform: uppercase;
    border: none;
    border-radius: 5px;
    padding: 1rem 17px;
    cursor: pointer;
  }
  button:hover {
    background-color: #c22370;
    transition: 0.4s;
  }
</style>
