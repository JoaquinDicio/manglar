---
import Logo from "./Logo.astro";
import BtnPrimary from "./ToggleModalBtn/ToggleModalBtn";
---

<div class="bg">
  <div class="d-flex flex-column align-items-center low-opacity">
    <Logo />
    <h2>AMIGOS, SABORES Y MUSICA QUE TE HACE VIBRAR</h2>
    <BtnPrimary client:visible text={"Quiero mi evento"} />
  </div>
</div>

<style>
  div.bg {
    background-image: url("../assets/eventos.jpg");
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }
  div.low-opacity {
    background-color: rgba(0, 0, 0, 0.65);
    padding: 4rem 3rem;
    justify-content: space-evenly;
    height: 100vh;
  }
  h2 {
    text-align: center;
    color: #ffff;
    font-weight: 400;
  }
</style>
